{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "types/**/*"
    ],
    "sourceMap": true,
    "target": "ES5",
    "module": "CommonJS",
    "jsx": "preserve",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {},
    "esModuleInterop": true,
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "outDir": "dist",
    "incremental": true,
    "noEmit": true
  },
  "include": [
    "public/**/*",
    "pages/**/*",
    "styles/**/*",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".eslintrc.js"
  ],
  "references": [
    {
      "path": "../libs/components"
    }
  ]
}
